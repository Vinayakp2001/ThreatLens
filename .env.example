# Threat Modeling Documentation Generator - Configuration Example
# Copy this file to .env and update the values according to your setup

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Configuration Management
ENABLE_CONFIG_HOT_RELOAD=true
CONFIG_VALIDATION_STRICT=true

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider (openai, azure, anthropic, huggingface)
LLM_PROVIDER=openai

# OpenAI Configuration (when LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: for OpenAI-compatible APIs

# Azure OpenAI Configuration (when LLM_PROVIDER=azure)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-azure-api-key-here
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
# AZURE_OPENAI_API_VERSION=2023-12-01-preview

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-ada-002
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# =============================================================================
# GitHub API Configuration
# =============================================================================
# GitHub Personal Access Token for PR analysis (optional but recommended)
# Generate at: https://github.com/settings/tokens
# Required scopes: public_repo (for public repos) or repo (for private repos)
GITHUB_TOKEN=ghp_your-github-personal-access-token-here

# GitHub API Configuration
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_REQUESTS_PER_HOUR=5000
GITHUB_REQUESTS_PER_MINUTE=100
GITHUB_TIMEOUT_SECONDS=30
GITHUB_RETRY_ATTEMPTS=3
GITHUB_RETRY_BACKOFF_FACTOR=2.0

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_BASE_PATH=./storage
REPOS_STORAGE_PATH=./storage/repos
DOCS_STORAGE_PATH=./storage/docs
EMBEDDINGS_STORAGE_PATH=./storage/embeddings
DATABASE_PATH=./storage/threat_modeling.db

# Storage Management
ENABLE_STORAGE_QUOTAS=true
AUTO_CLEANUP_ENABLED=true
BACKUP_RETENTION_DAYS=180
TEMP_FILE_RETENTION_HOURS=24
MAINTENANCE_INTERVAL_HOURS=24

# =============================================================================
# Repository Analysis Configuration
# =============================================================================
MAX_REPO_SIZE_MB=100
ANALYSIS_TIMEOUT_MINUTES=10
MAX_CONCURRENT_ANALYSES=5

# =============================================================================
# FAISS Configuration
# =============================================================================
FAISS_INDEX_TYPE=IndexFlatIP
EMBEDDING_DIMENSION=1536
USE_GPU_FOR_FAISS=false
FAISS_GPU_DEVICE=0

# =============================================================================
# Performance Configuration
# =============================================================================
ENABLE_GPU_ACCELERATION=true
LLM_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000

# =============================================================================
# Security Configuration
# =============================================================================
ALLOWED_REPO_HOSTS=["github.com", "gitlab.com", "bitbucket.org"]
ENABLE_LOCAL_REPOS=true
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["*"]

# =============================================================================
# Monitoring and Metrics
# =============================================================================
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
HEALTH_CHECK_INTERVAL_SECONDS=60

# =============================================================================
# Environment-Specific Examples
# =============================================================================

# Development Environment
# DEBUG=true
# LOG_LEVEL=DEBUG
# MAX_CONCURRENT_ANALYSES=2
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Production Environment
# DEBUG=false
# LOG_LEVEL=INFO
# ENABLE_CONFIG_HOT_RELOAD=false
# MAX_CONCURRENT_ANALYSES=10
# CORS_ORIGINS=["https://yourdomain.com"]

# Docker Environment
# API_HOST=0.0.0.0
# STORAGE_BASE_PATH=/app/storage
# DATABASE_PATH=/app/storage/threat_modeling.db